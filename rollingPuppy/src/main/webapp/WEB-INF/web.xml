
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>

	<!-- Servlet Area -->

	<servlet>
		<servlet-name>DBCPInit</servlet-name>
		<servlet-class>com.puppy.pool.DBCPInit</servlet-class>
		<init-param>
			<param-name>jdbcDriver</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>Home Request</servlet-name>
		<servlet-class>com.puppy.controller.HomeController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Join Request</servlet-name>
		<servlet-class>com.puppy.controller.JoinController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Login Request</servlet-name>
		<servlet-class>com.puppy.controller.LoginController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Logout Request</servlet-name>
		<servlet-class>com.puppy.controller.LogoutController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Main Request</servlet-name>
		<servlet-class>com.puppy.controller.MainController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ErrorPage Request</servlet-name>
		<servlet-class>com.puppy.controller.ErrorController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>Chat Request</servlet-name>
		<servlet-class>com.puppy.controller.ChatController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Search Request</servlet-name>
		<servlet-class>com.puppy.controller.SearchController</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ChattingServer Request</servlet-name>
		<servlet-class>com.puppy.controller.ChattingServerLinkController</servlet-class>
	</servlet>
	<!-- Servlet-mapping Area -->

	<servlet-mapping>
		<servlet-name>Home Request</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Join Request</servlet-name>
		<url-pattern>/join</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Login Request</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Logout Request</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Main Request</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>ErrorPage Request</servlet-name>
		<url-pattern>/error</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>Chat Request</servlet-name>
		<url-pattern>/chat/*</url-pattern>
	</servlet-mapping>

		
	<servlet-mapping>
		<servlet-name>Search Request</servlet-name>
		<url-pattern>/search</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>ChattingServer Request</servlet-name>
		<url-pattern>/getId</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index</welcome-file>
	</welcome-file-list>

	<error-page>
		<error-code>404</error-code>
		<location>/error?type=404</location>
	</error-page>

	<error-page>
		<error-code>500</error-code>
		<location>/error?type=500</location>
	</error-page>

</web-app>
