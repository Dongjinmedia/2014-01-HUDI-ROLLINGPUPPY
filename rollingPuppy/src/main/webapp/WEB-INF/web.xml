
<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	<!-- Servlet Area -->	
	
	<servlet>
		<servlet-name>DBCPInit</servlet-name>
		<servlet-class>com.puppy.pool.DBCPInit</servlet-class>
		<init-param>
			<param-name>jdbcDriver</param-name>
			<param-value>com.mysql.jdbc.Driver</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet>
		<servlet-name>Home Request</servlet-name>
		<servlet-class>com.puppy.controller.HomeController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Join Request</servlet-name>
		<servlet-class>com.puppy.controller.JoinController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Login Request</servlet-name>
		<servlet-class>com.puppy.controller.LoginController</servlet-class>
	</servlet>
	
	<servlet>
		<servlet-name>Navermap Request</servlet-name>
		<servlet-class>com.puppy.controller.MapController</servlet-class>
	</servlet>
		
	<!-- Servlet-mapping Area -->
	
	<servlet-mapping>
		<servlet-name>Home Request</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Join Request</servlet-name>
		<url-pattern>/join</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Login Request</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
		<servlet-name>Navermap Request</servlet-name>
		<url-pattern>/navermap</url-pattern>
	</servlet-mapping>
	

	
	
	
	
	
</web-app>
